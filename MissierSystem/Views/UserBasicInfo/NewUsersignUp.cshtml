@model MissierSystem.Models.GeneralModels.Models.UserBasicInfo

@{
    ViewData["Title"] = "Sign Up";
}
<div class="mb-3">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: rgb(40 147 179)">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/image/geral/logo/missier_logo_pequeno.png" title="Missier Sorteios" alt="Missier Sorteios" /> <span class="ml-3 pt-4">Missier Sorteios</span></a>

            <div class="d-flex">
                <a class="btn btn-danger" asp-controller="Home" asp-action="GetOutFromLogin">Voltar</a>
            </div>

        </div>
    </nav>
</div>


@if (!String.IsNullOrEmpty(ViewBag.alert))
{
    if (ViewBag.alert == "fail")
    {
        <div class="container-fluid mt-4">
            <div class="alert alert-danger text-center lead" role="alert">
                Infelizmente houve um erro inesperado tentar salvar sua conta, tente novamente mais tarde.
            </div>
        </div>
    }
}

<div class="p-3 mt-1" style="background-color: white; margin-left: 2%; margin-right:2%;box-shadow: 1px 5px 30px black">
    <div class="row">
        <div class="col-sm-12 col-lg-6">
            <div class="container">
                <h1 class="lead text-center" style="font-size: 40px;">Dados Pessoais <i class="fas fa-info-circle"></i></h1>
                <span class="lead"></span>
                <hr />
                <form asp-action="NewUsersignUp">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" value="@ViewBag.localUse" name="RedirectTo" />
                    <input type="hidden" value="@ViewBag.raffleId" name="raffleId" />
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label mb-1"></label><span style="color:red">*</span>
                        <input asp-for="FullName" autofocus class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NickName" class="control-label mt-2 mb-1">Crie um nome de usuário</label><span style="color:red">*</span>
                        <input asp-for="NickName" class="form-control" placeholder="Exemplo: OBrabo2021" />
                        <span asp-validation-for="NickName" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Email" class="control-label mb-1"></label><span style="color:red">*</span>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="Phone" class="control-label mb-1"></label>
                        <input asp-for="Phone" class="form-control" onkeypress="mask(this, mphone);" onblur="mask(this, mphone);" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="row mt-2">
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="UserPassword" class="control-label mb-1"></label><span style="color:red">*</span>
                                <input asp-for="UserPassword" type="password" class="form-control" />
                                <span asp-validation-for="UserPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="control-label mb-1"></label><span style="color:red">*</span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group d-grid gap-2 my-2">
                        <input type="submit" value="Cadastrar-se" class="btn btn-danger btn-block font-weight-normal" style="font-size: 20px;" />
                    </div>
                </form>
            </div>

        </div>
        <div class="col-sm-12 col-lg-6" style="margin:auto">
            <img src="~/image/home/winners.jpg" class="img-fluid" />
        </div>
    </div>

</div>

<div>

    <div class="row">
        <div class="col-12"></div>
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
