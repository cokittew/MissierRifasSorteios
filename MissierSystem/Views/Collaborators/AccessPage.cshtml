@{
    ViewData["Title"] = "Acesso - Plataforma de Controle";
}

<style>
    #container {
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center
    }

    #box {
        width: 100%;
        height: 400px;
    }

    #imagem {
        width: 70%;
    }

</style>

<div class="container-fluid bg-dark text-light">
   
    <div id="container">
        
        <div id="box">
            <div class="row">
                <div class="col-sm-4 mt-lg-4">
                    <div class="row justify-content-lg-end justify-content-sm-center">
                        <img src="~/image/geral/logo/missier7.png" id="imagem" />
                    </div>
                </div>
                <div class="col-sm-8 mt-lg-4">
                    <div class="row text-center justify-content-center mt-4">
                        <span class="display-4 mt-lg-3 mb-2">Plataforma de Controle de Convites</span>
                        <hr style="width: 50%;" />
                    </div>

                    <form asp-action="AccessPageValidation" class="mt-lg-5 mt-sm-3">
                        <div class="row justify-content-center">
                            <div class="col-sm-12 col-md-6 text-center">
                                <input type="email" class="form-control" placeholder="Informe o e-mail cadastrado no sistema" id="Email" name="Email" min="4" required />
                            </div>
                            <div class="col-sm-12 col-md-3 text-start">
                                <div class="d-grid gap-4">
                                    <button class="btn btn-danger">Acessar</button>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>

</div>