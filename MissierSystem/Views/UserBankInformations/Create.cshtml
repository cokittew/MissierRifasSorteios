@model MissierSystem.Models.GeneralModels.Models.UserExtraModels.UserBankInformation

@{
    ViewData["Title"] = "Adicionar Nova Conta";
}

<style>
    #teste:hover {
        background-color: red;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-5" style="width: 100%; height: 10%; box-shadow: 1px 2px 25px black" id="platformMainNavbar">

    <div class="container-fluid">
        <div style="margin-left: 2px;">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/image/geral/logo/missier_logo_pequeno.png" title="Missier Sorteios" alt="Missier Sorteios" /> <span class="ml-3 pt-4">Missier Sorteios</span></a>
        </div>
        @*<a class="navbar-brand" href="#">Missier System</a>*@
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="#">Missier</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Meus Serviços
                    </a>
                    <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" style="color: white" id="teste" asp-action="RaffleMainPage" asp-controller="PlataformServiceRaffle">Sorteio/Rifa</a></li>
                    </ul>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link active dropdown-toggle" href="#" id="navbarDropdown2" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Minha Conta
                    </a>
                    <ul class="dropdown-menu bg-dark" aria-labelledby="navbarDropdown2">
                        <li><a class="dropdown-item" style="color: white" id="teste" asp-action="Create" asp-controller="UserSocialMidias">Redes Sociais</a></li>
                        @*<li><a class="dropdown-item" style="color: white" id="teste" asp-action="Create" asp-controller="UserBankInformations">Contas Bancárias</a></li>*@
                        <li><a class="dropdown-item" style="color: white" id="teste" asp-action="Create" asp-controller="UserPixInformations">PIX</a></li>
                    </ul>
                </li>
            </ul>
            <div class="d-flex m-2">
                <a class="btn btn-outline-danger" asp-controller="Home" asp-action="GetOutFromLogin">Sair</a>
            </div>
        </div>
        

    </div>
</nav>

<div class="row">
    <div class="col-sm-12 col-lg-12 text-center">
        <h1 class="display-4">Adicionar conta Bancária <i class="fas fa-plus"></i></h1>
    </div>
</div>
<hr />

@if (!String.IsNullOrEmpty(ViewBag.alert))
{

    if (ViewBag.alert == "fail")
    {
        <div class="container-fluid mt-2">
            <div class="alert alert-danger text-center" role="alert">
                Infelizmente houve um erro ao salvar sua conta bancária, tente novamente mais tarde.
            </div>
        </div>
    }
}

<div class="container-fluid">
    <div class="row">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdBasicUser" value="@ViewBag.userId" class="form-control" />

            <div class="col-sm-12 col-lg-12 text-center">
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-lg-3 ">
                        <div class="form-group">
                            <label asp-for="BankCode" class="control-label lead"></label><span style="color:red">*</span>
                            <select asp-for="BankCode" class="form-control">
                                <option value="260">Nubank</option>
                                <option value="257">Bradesco - Next</option>
                                @*<option value=""></option>*@
                            </select>
                            <span asp-validation-for="BankCode" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-3">
                        <div class="form-group">
                            <label asp-for="AgenceAccount" class="control-label lead"></label><span style="color:red">*</span>
                            <input asp-for="AgenceAccount" class="form-control" type="number" />
                            <span asp-validation-for="AgenceAccount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-lg-12 text-center">
                <div class="row justify-content-center">
                    <div class="col-sm-12 col-lg-3 mt-2">
                        <div class="form-group">
                            <label asp-for="AccountOwnerCpf" class="control-label lead">CPF do titular</label><span style="color:red">*</span>
                            <input asp-for="AccountOwnerCpf" class="form-control" type="number" />
                            <span asp-validation-for="AccountOwnerCpf" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-3 mt-2">
                        <div class="form-group">
                            <label asp-for="BankAccount" class="control-label lead"></label><span style="color:red">*</span>
                            <input asp-for="BankAccount" class="form-control" type="number" />
                            <span asp-validation-for="BankAccount" class="text-danger"></span>
                        </div>
                    </div>
                </div>


            </div>

            <div class="row justify-content-center">
                <div class="col-sm-12 col-lg-6 ">
                    <div class="form-group d-grid gap-4 mt-2 text-center">
                        <input type="submit" value="Salvar Conta" class="btn btn-success" />
                    </div>
                </div>
            </div>
            

        </form>

        <div class="mt-5">
            <a asp-action="Index" asp-controller="UserBankInformations" class="btn btn-outline-danger">Voltar</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
