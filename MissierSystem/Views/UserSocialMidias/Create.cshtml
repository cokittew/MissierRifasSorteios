@if (!String.IsNullOrEmpty(ViewBag.alert))
{
    if (ViewBag.alert == "error")
    {
        <div class="container-fluid mt-4">
            <div class="alert alert-danger text-center lead" role="alert">
                Falha ao salvar os dados!
            </div>
        </div>
    }
    else if (ViewBag.alert == "success")
    {
        <div class="container-fluid mt-4">
            <div class="alert alert-success text-center lead" role="alert">
                Dados salvos com sucesso!
            </div>
        </div>
    }
}

<div class="row">
    <div class="col-sm-12 col-lg-12 text-center">
        <h1 class="display-4">Cadastre suas redes sociais</h1>
    </div>
</div>
<hr />


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-6 text-center">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" value="@valueId" />
                <input type="hidden" asp-for="IdBasicUser" value="@ViewBag.userId" class="form-control" />

                <div class="row">
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Instagram" class="control-label lead"></label><i class="fab fa-instagram p-1" style="color:orange;"></i>
                            <input asp-for="Instagram" class="form-control text-center" />
                            <span asp-validation-for="Instagram" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6">
                        <div class="form-group">
                            <label asp-for="Twitter" class="control-label lead"></label><i class="fab fa-twitter p-1" style="color:deepskyblue;"></i>
                            <input asp-for="Twitter" class="form-control text-center" />
                            <span asp-validation-for="Twitter" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6 mt-2">
                        <div class="form-group">
                            <label asp-for="Youtube" class="control-label lead"></label><i class="fab fa-youtube p-1" style="color:red;"></i>
                            <input asp-for="Youtube" class="form-control text-center" />
                            <span asp-validation-for="Youtube" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6 mt-2">
                        <div class="form-group">
                            <label asp-for="Facebook" class="control-label lead"></label><i class="fab fa-facebook p-1" style="color:darkblue;"></i>
                            <input asp-for="Facebook" class="form-control text-center" />
                            <span asp-validation-for="Facebook" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6 mt-2">
                        <div class="form-group">
                            <label asp-for="Reddit" class="control-label lead"></label><i class="fab fa-reddit p-1" style="color:orangered;"></i>
                            <input asp-for="Reddit" class="form-control text-center" />
                            <span asp-validation-for="Reddit" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6 mt-2">
                        <div class="form-group">
                            <label asp-for="WhatsApp" class="control-label lead"></label><i class="fab fa-whatsapp p-1" style="color:green;"></i>
                            <input asp-for="WhatsApp" type="tel" class="form-control text-center" />
                            <span asp-validation-for="WhatsApp" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-12 col-lg-6 mt-2">
                        <div class="form-group">
                            <label asp-for="TikTok" class="control-label lead"></label><i class="fab fa-tiktok p-1"></i>
                            <input asp-for="TikTok" class="form-control text-center" />
                            <span asp-validation-for="TikTok" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col-sm-12 col-lg-12">
                        <div class="form-group">
                            <label asp-for="AnotherInformations" class="control-label lead">Outras informações</label>

                            <textarea asp-for="AnotherInformations" class="form-control text-center" rows="7" placeholder=""></textarea>
                            <span asp-validation-for="AnotherInformations" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group d-grid gap-4 mt-2">
                    <input type="submit" value="Salvar Mudanças" class="btn btn-success" />
                </div>
            </form>
        </div>

    </div>
</div>

<script type="text/javascript">
    var myModal = document.getElementById('myModal')
    var myInput = document.getElementById('myInput')
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

