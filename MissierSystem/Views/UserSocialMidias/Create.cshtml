@model MissierSystem.Models.GeneralModels.Models.UserSocialMidia

@{
    var valueId = Model != null ? Model.Id : 0;

    ViewData["Title"] = "Create";
}

<style>
    #teste:hover {
        background-color: red;
    }
</style>

